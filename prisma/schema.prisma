datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

generator typegraphql {
  provider = "typegraphql-prisma"
  output   = "../src/generated/type-graphql"
}

model Conversation {
  createdAt    DateTime   @default(now()) @map("created_at")
  id           Int        @id @default(autoincrement())
  name         String
  messages     Message[]
  lastRead     LastRead[]
  participants Person[]   @relation("ConversationToPerson", references: [id])
}

model Message {
  content        String
  authorID       Int         @map("author_id")
  conversationID Int          @map("conversation_id")
  createdAt      DateTime     @default(now()) @map("created_at")
  id             Int          @id @default(autoincrement())
  author         Person       @relation(fields: [authorID], references: [id])
  conversation   Conversation @relation(fields: [conversationID], references: [id])
}

model Person {
  createdAt     DateTime       @default(now()) @map("created_at")
  email         String         @unique
  id            Int            @id @default(autoincrement())
  isAdmin       Boolean        @default(false) @map("is_admin")
  lastSeen      DateTime?      @map("last_seen")
  username      String         @unique
  hash          String
  messages      Message[]
  lastRead      LastRead[]
  conversations Conversation[] @relation("ConversationToPerson", references: [id])
}

model LastRead {
  lastRead       DateTime     @map("last_read")
  personID       Int          @map("person_id")
  conversationID Int          @map("conversation_id")
  person         Person       @relation(fields: [personID], references: [id])
  conversation   Conversation @relation(fields: [conversationID], references: [id])

  @@unique([personID, conversationID])
}

model Session {
  sid    String   @id
  sess   Json
  expire DateTime
}
