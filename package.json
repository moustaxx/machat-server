{
    "name": "machat-prisma",
    "author": "moustaxx",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "node ./dist",
        "clean": "rm -rf dist",
        "build": "yarn clean && yarn generate && tsc",
        "generate": "yarn generate:prisma && yarn generate:nexus",
        "generate:prisma": "prisma generate",
        "generate:nexus": "ts-node --transpile-only ./src/schema",
        "postinstall": "yarn generate",
        "test": "jest",
        "lint": "eslint --ignore-path .gitignore --cache --ext .ts,.tsx ./src",
        "dev": "tsnd --respawn --transpile-only --ignore-watch ./src/generated --cache-directory ./.yarn/.cache/tsnd ./src/start",
        "debug": "tsnd --inspect --respawn --transpile-only --ignore-watch ./src/generated --cache-directory ./.yarn/.cache/tsnd ./src/start"
    },
    "dependencies": {
        "@devoxa/prisma-relay-cursor-connection": "^1.1.0",
        "@nexus/schema": "^0.19.1",
        "@prisma/client": "^2.12.1",
        "altair-fastify-plugin": "^3.0.0",
        "apollo-server-errors": "^2.4.2",
        "argon2": "^0.27.0",
        "connect-pg-simple": "^6.2.1",
        "dotenv": "^8.2.0",
        "fastify": "^3.8.0",
        "fastify-cookie": "^4.1.0",
        "fastify-cors": "^5.0.0",
        "fastify-session": "^5.2.1",
        "graphql": "^15.4.0",
        "graphql-iso-date": "^3.6.1",
        "mercurius": "^6.4.0",
        "nexus-plugin-prisma": "^0.25.0",
        "prisma-machat": "link:./prisma/client"
    },
    "devDependencies": {
        "@prisma/cli": "^2.12.1",
        "@types/connect-pg-simple": "^4.2.2",
        "@types/graphql-iso-date": "^3.4.0",
        "@types/jest": "^26.0.15",
        "@types/node": "^14.14.10",
        "@typescript-eslint/eslint-plugin": "^4.8.2",
        "@typescript-eslint/parser": "^4.8.2",
        "eslint": "^7.14.0",
        "eslint-config-airbnb-typescript": "^12.0.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "jest": "^26.6.3",
        "jest-environment-node": "^26.6.2",
        "light-my-request": "^4.3.0",
        "pg": "^8.5.1",
        "ts-jest": "^26.4.4",
        "ts-node": "^9.0.0",
        "ts-node-dev": "^1.0.0",
        "typescript": "^4.1.2"
    }
}
