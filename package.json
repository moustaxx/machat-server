{
    "name": "machat-prisma",
    "author": "moustaxx",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "node ./dist",
        "clean": "rm -rf dist",
        "build": "yarn clean && yarn generate && tsc",
        "generate": "yarn generate:prisma && yarn generate:nexus",
        "generate:prisma": "prisma generate",
        "generate:nexus": "ts-node --transpile-only ./src/schema",
        "postinstall": "yarn generate",
        "test": "jest",
        "lint": "eslint --ignore-path .gitignore . --ext ts --ext tsx",
        "dev": "tsnd --respawn --transpile-only --ignore-watch ./src/generated ./src/start"
    },
    "dependencies": {
        "@devoxa/prisma-relay-cursor-connection": "^1.1.0",
        "@nexus/schema": "^0.16.0",
        "@prisma/client": "^2.9.0",
        "altair-fastify-plugin": "^2.5.1",
        "apollo-server-errors": "^2.4.2",
        "argon2": "^0.27.0",
        "connect-pg-simple": "^6.2.1",
        "dotenv": "^8.2.0",
        "fastify": "^3.7.0",
        "fastify-cookie": "^4.0.2",
        "fastify-cors": "^4.1.0",
        "fastify-session": "^5.2.0",
        "graphql": "^15.3.0",
        "graphql-iso-date": "^3.6.1",
        "mercurius": "^6.3.0",
        "nexus-plugin-prisma": "^0.22.0",
        "prisma-machat": "link:./prisma/client"
    },
    "devDependencies": {
        "@prisma/cli": "^2.9.0",
        "@types/connect-pg-simple": "^4.2.0",
        "@types/graphql-iso-date": "^3.4.0",
        "@types/jest": "^26.0.15",
        "@types/node": "^14.14.0",
        "@typescript-eslint/eslint-plugin": "^4.5.0",
        "@typescript-eslint/parser": "^4.5.0",
        "eslint": "^7.11.0",
        "eslint-config-airbnb-typescript": "^12.0.0",
        "eslint-import-resolver-node": "^0.3.4",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.0",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "jest": "^26.6.0",
        "jest-environment-node": "^26.6.1",
        "light-my-request": "^4.2.1",
        "pg": "^8.4.1",
        "ts-jest": "^26.4.1",
        "ts-node": "^9.0.0",
        "ts-node-dev": "^1.0.0",
        "typescript": "^4.0.3"
    }
}
